    \end{column}
  \end{columns}
\end{frame}

\subsection{Workers}

\begin{frame}{Workers}
Workers are assumed to be:
\begin{itemize}
\item homogeneous, fixed number $N$
\item risk neutral; have linear instantaneous utility: $u \left( t \right) = u \left( w, e  \right) = w - e $
\item live infinite
\item maximize expected lifetime utility
\item are in one of two states: unemployed or employed
  \begin{itemize}
  \item when unemployed they have expected utility $V_{U}$
  \item when employed they have to decide whether to provide effort $V_E^N$ or not $ V_E^S$. That is, they face the problem:
    \begin{align}
      V_E = \text{max}\, \left( V_E^S, V_E^N \right)
    \end{align}
  \end{itemize}
\end{itemize}
\end{frame}

\begin{frame}{Workers}
  Asset-value equation: 
  \begin{align}
    rU\left(t\right) &=
    u\left(t\right) + \lambda\left(t\right) \left(\bar{U}\left(t\right) - U\left(t\right)\right) + \dot{U}\left(t\right)\\
    \intertext{In the steady state:}
    rU\left(t\right) &= u + \lambda \left(\bar{U} - U\right)
  \end{align}
  \begin{align*}
     \lambda =    
        \left\{ 
              \begin{array}{l@{\quad}l}
               a & \text{if worker is unemployed: job acquisition rate}\\
               b & \text{if worker is employed and exerts effort: separation rate}\\
               b + q & \text{if worker is employed and shirks: detection rate $q$}
              \end{array}\right.
  \end{align*}
  \begin{align}
    rV_E^N = w - e + b \left( V_u - V_E^N \right)\\
    rV_E^S = w  + \left( b + q \right) \left( V_u - V_E^S \right)\\
    rV_U = \bar{w} + a \left( V_E - V_U \right)
  \end{align}
\end{frame}

\subsection{Employers}

\begin{frame}{Employers}
  \begin{itemize}
  \item fixed number $M$ of homogeneous firms.
  \item technology of representative firm $f \left( L_i \right)$
  \item compete by offering contracts $\left( w, \bar{w} \right)$
  \item employed shirkers are assumed to be unproductive (i.e. output is zero)
  \item if workers exert effort they provide one unit of effective labor
  \item firms will hire workers up to the point where the expected costs and the expected profits of one additional worker are equal.
  \item Optimization $J = C$ then gives the implicit labor demand 
        \begin{align}
          f'\left(L^*_i\right) = w + \frac{b\bar{w}}{\left(a+r\right)}
        \end{align}
  \end{itemize}
\end{frame}

\subsection{Effort Decision}

\begin{frame}{The Effort Decision}
  When will workers decide to provide effort?
  \begin{itemize}
  \item Will Provide effort when the no-shirking condition
    $V_E^N \geq V_E^S$ is satisfied.
  \end{itemize}
  The no-shirking condition in terms of wages 
  \begin{align}
    w \geq e + \bar{w} + \frac{e}{q} \left(\frac{bN}{\left(N-L\right)} + r\right) \equiv \hat{w}
  \end{align}
  Another way to express the NSC is
  \begin{align}
    q\left(V^S_E-V_U\right) \geq e
  \end{align}
\end{frame}

\subsection{Equilibrium}

\begin{frame}{Equilibrium}
\begin{columns}[T]
    \begin{column}{.4\textwidth}
      \begin{itemize}
      \item firms will offer $\left( w^{*}, \bar{w} = 0 \right)$  
      \item workers will provide effort $\rightarrow$ wages are efficient  
      \item equilibrium occurs where
        labor demand and no-shirking condition intersect
      \item  unemployment is involuntary
      \end{itemize}
    \end{column}
    \begin{column}{.6\textwidth}
      %%%%%%%%%%%%%%%%%%%%%%%%%%
%%% Plot of Equilibrium 
%%%%%%%%%%%%%%%%%%%%%%%%%%
