\end{frame}

\subsection{Comparative Statics}

\begin{frame}{Comparative Statics}
  \begin{itemize}
  \item The NSC implies that 
    \begin{itemize}
    \item the critical wage is higher the higher the separation rate $b$
    \item the critical wage is higher the lower the detection rate $q$
    \item the critical wage is higher the higher the unemployment benefits $\bar{w}$ $\rightarrow$ firms will choose the lowest level of unemployment benefits
  \end{itemize}
  \item while changes in $q$ and $b$ (as long as $\bar{w} = 0$) leave labor demand unchanged
  \item changes in unemployment benefit $\bar{w}$ change costs of one additional worker $\rightarrow$ directly and indirectly
  \end{itemize}  
  \begin{align}
              F^{\prime}\left(L^*_i\right) = w^{*} \quad \bar{w}=0\\
              F^{\prime}\left(L^*_i\right) = \hat{w} + \frac{b\bar{w}}{\left(a+r\right)} \quad \bar{w} > 0
  \end{align}
\end{frame}

\begin{frame}
  \begin{figure}[h]
    \centering
    \includegraphics[scale=0.4]{figure.pdf}
    \caption{Comparative statics.}
  \end{figure}
\end{frame}

